<p id="notice"><%= notice %></p>

<h1>Textfiles</h1>

<table>
  <thead>
    <tr>
      <th>File Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textfiles.each do |textfile| %>
      <tr>
        <td> 
          <% if textfile.text_file.blob %>
            <% textfile.text_file.blob.open do |file| %>
              <%=  file.read %>
            <% end if textfile.text_file %>
          <% end %>
        </td>

        <td><%= link_to 'Show', textfile %></td>
        <td><%= link_to 'Destroy', textfile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

